<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.h4">Login</MudText>
    </MudCardHeader>
    <MudCardContent>
        <form method="post" action="/api/auth/login">
            <MudInput Label="Username" name="username" id="username" T="string" Clearable /><br />
            <MudInput Label="Password" name="password" id="password" T="string" Clearable InputType="InputType.Password" /><br />
            
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Login</MudButton>
        </form>
    </MudCardContent>
</MudCard>